<%- include("../partials/header")%>

<fieldset class="fence">
<fieldset class="daycare">
<% pokemon.forEach(p => { %>
    <div>
        <a href="/pokemon/<%=p._id%>"><img class="" src="<%= p.sprite %>"></a>
        <p> <%if (p.nickname !== ''){ %>
            "<%=p.nickname%>" the <%=p.name%>
            <%} else {%>
                <%=p.name%>
                <%}%></p>
                
        <form action="/pokemon/<%=p._id%>?_method=DELETE" method="POST">
    <button type="submit">Release Pokemon</button></form>
    </div>

<% }) %>


<button class="daycareBtn" ><a href="/pokemon/new"><img <a href="https://pokemondb.net/pokedex/moltres">Create New Pokemon</a></button>
</fieldset>

