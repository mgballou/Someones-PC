                <!-- </div> -->
                <div class="user-team">

                    <% team.pokemon.forEach(p=> {%>

                        <div class="pokeTeam">
                            <div class="poke-sprite">
                                <div class="sprite-stats-one">
                                    <div class="img-name">
                                        <a href="/pokemon/<%=p._id%>"><img src="<%=p.sprite%>" alt="<%=p.name%>"></a>
                                
                                    <%if (p.nickname !=='' ){ %>
                                    "<%=p.nickname%>"
                                        <%} else {%>
                                            <%=p.name%>
                                                <%}%>
                                    </div>

                                                    <div class="pokeStats">
                                                        <%if (p.type2) {%>
                                                            <p>
                                                                <%=p.type1.toUpperCase()%> / <%=p.type2.toUpperCase() %>
                                                            </p>
                                                            <% } else { %>
                                                                <p>
                                                                    <%=p.type1.toUpperCase() %>
                                                                </p>
                                                                <% } %>

                                                                    <p>
                                                                        <%=p.abilities.current.toUpperCase()%>
                                                                    </p>
                                                                    <%if (p.heldItem) {%>
                                                                        <p>@<%=p.heldItem%>
                                                                        </p>
                                                                        <% } else { %>
                                                                            <p>None</p>
                                                                            <% } %>
                                                    </div>
                                </div>         
                                            <div class="poke-stats">
                                                    <div class="poke-stat">
                                                        <p id="HP">HP:</p>
                                                        <p id="HPstat">
                                                            <%=p.stats[0].values.base%>
                                                        </p>
                                                    </div>
                                                    <div class="poke-stat">
                                                        <p id="ATK">ATK:</p>
                                                        <p id="ATKstat">
                                                            <%=p.stats[1].values.base%>
                                                        </p>
                                                    </div>
                                                    <div class="poke-stat">
                                                        <p id="DEF">DEF:</p>
                                                        <p id="DEFstat">
                                                            <%=p.stats[2].values.base%>
                                                        </p>
                                                    </div>
                                                    <div class="poke-stat">
                                                        <p id="SPATK">SpATK:</p>
                                                        <p id="SPATKstat">
                                                            <%=p.stats[3].values.base%>
                                                        </p>
                                                    </div>
                                                    <div class="poke-stat">
                                                        <p ID="SPDEF">SpDEF:</p>
                                                        <p id="SPDEFstat">
                                                            <%=p.stats[4].values.base%>
                                                        </p>
                                                    </div>
                                                    <div class="poke-stat">
                                                        <p id="SPEED">SPEED:</p>
                                                        <p id="SPEEDstat">
                                                            <%=p.stats[5].values.base%>
                                                        </p>
                                                    </div>
                                                </div>

                            </div>


                        </div>
                </div>

                <% }) %>
